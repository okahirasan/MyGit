    // SetSelect2 start
		function SetSelect2(setId, setUrl, isAll, isRange) {
		 $('#' + setId).empty();
		 $.ajax({
			 type: 'GET',
			 url: setUrl,
			 dataType: 'json',
			 success: function(json){
				 var optionItems = new Array();
				 optionItems.push(new Option("", ""));
				 if (isAll) {
					 optionItems.push(new Option("すべて", "all"));
				 }
				 for (cnt in json) {
					 if (isRange) {
						 optionItems.push(new Option(json[cnt].name, json[cnt].range));
					 }else{
						 optionItems.push(new Option(json[cnt].name, json[cnt].id));
					 }
				 }
				 $('#' + setId).append(optionItems);
				 var array =[];
				 array = SetArray(setId);
				 $('#' + setId).val(array).select2();
          $("#" + setId).select2(
					{placeholder: "選択してください。複数選択可能です。",
					allowClear: true}
					);
			 }
		 });
	 };
		// SetSelect2 end
		
		function SetDispCnt() {
      var optionItems = new Array();
			optionItems.push(new Option("", ""));
			var dispCnt = 12;
			for (var i=1; i < 10; i++) {
				var value = dispCnt * i;
				var name = (dispCnt * i) + "件";
        optionItems.push(new Option(name, value));
			}
			$('#dispCnt').append(optionItems);
			var cnt = 60;
			if (<%- req.session.dispCnt%> != "") {
				cnt = <%- req.session.dispCnt%>;
			}
      $('#dispCnt').val(cnt).select2();
		}

		function SetArray(val) {
