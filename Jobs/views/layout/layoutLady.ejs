			else if (val == "workStatus") {
				setArray = <%- req.session.workStatus%>;
			}
			var array = [];
			for (var i=0; i < setArray.length; i++) {
				if (setArray[i].id != "" && setArray[i].id != null) {
					array.push(setArray[i].id);
				}
			}
			return array;
		 }
		 
