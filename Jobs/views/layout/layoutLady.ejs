    // SetArea start
		function SetArea() {
			$.ajax({
				type: 'GET',
				url: '/common/GetAreaNameList/' + '<%- req.session.spotArea1　%>',
				dataType: 'json',
				success: function(json){
					var area = "";
					for (cnt in json) {
						if (area != "") {
							area = area  + " ｜ " + json[cnt].kName.replace("県","").replace("都","").replace("府","");
						}else{
							area = json[cnt].kName.replace("県","").replace("都","").replace("府","");
						}
					}
					$( "#divArea" ).text(area);
				}
			});
		}
    // SetArea start

		
