		// SetPage Start
    function SetPage() {
			var total = '<%= ladysTotal%>' * 1;
			var dispCnt = '<%- req.session.dispCnt%>' * 1;
			if (total <= dispCnt) {
				$('.pagination').hide();
			}else{
				var loop = parseInt(total / dispCnt) -1;
				var shou = total % dispCnt;
				if (shou != 0) {
					loop = loop + 1;
				}
				for (var i= 0; i <= loop; i++) {
					var next = i + 1;
					if (i == 5) {
						page = 1 + loop;
						nextPage = 2 + loop;
						$('#page6').after($('<li id="page' + nextPage + '"><a href="#">' + nextPage + '</a></li>'));
            $('#page6').after($('<li><a href="javascript:void(0)">...</a></li>'));

						break;
					}else{
						if (i == 0) {
							$('#page' + i).after($('<li id="page' + next + '" class="active"><a href="#">' + next + '</a></li>'));
						}else{
							$('#page' + i).after($('<li id="page' + next + '"><a href="#">' + next + '</a></li>'));
						}
					}
				}
        //<li class="active" id="pageFirst"><a href="#">1</a></li>

			}
		};
