<div id="edit-basic" class="tab-pane">
	<!-- general -->	
	<div class="row">
		<div class="col-xs-12 col-sm-6">
			<h4 class="header blue bolder smaller">基本情報</h4>
			<% if(flash && flash.err) { %>
			<div class="alert alert-danger">
									<button type="button" class="close" data-dismiss="alert">
							<i class="icon-remove"></i>
						</button>
			<i class="fa fa-frown-o"></i> 
			<% Object.keys(flash.err).forEach(function(error) { %>
					<strong><%-flash.err[error].name %></strong>：<%-flash.err[error].message %>
			<% }) %>
			</div>
			<% } %>
			<div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="name">店舗名</label>				
				<div class="col-sm-8">
					<div class="clearfix">
						<input class="col-xs-12 col-sm-8" type="text" name="name" id="name" placeholder="Username" value="<%= shop.name%>" />
					</div>
				</div>
			</div>
			<div class="space-4"></div>
					
			<div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="shopType">業種</label>				
				<div class="col-sm-8">
					<select id="drpShopType" name="shopType" style="width:220px;" class="populate">
					</select>
				</div>
			</div>
			<div class="space-4"></div>
			
      <div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="phone">電話番号</label>
				<div class="col-sm-8">
					<span class="input-icon input-icon-right">
					<input class="input-medium input-mask-phone" type="text" id="tel" name="tel" value=""　/>
					<i class="icon-phone icon-flip-horizontal"></i>
				</div>
			</div>
			<div class="space-4"></div>
			
		  <div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="mvphone">携帯電話番号</label>
				<div class="col-sm-8">
					<span class="input-icon input-icon-right">
					<input class="input-medium input-mask-phoneMV" type="text" id="mobileTel" name="mobileTel" value=""　/>
					<i class="icon-phone icon-flip-horizontal"></i>
				</div>
			</div>
			<div class="space-4"></div>

			
      <div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="birth" >設立日</label>
					<div class="col-sm-8">
						<div class="input-medium">
							<div class="input-group">
								<% if(shop.birth != undefined){%>
								<input class="input-medium date-picker" id="birth" name="birth" type="text" data-date-format="yyyy/mm/dd" placeholder="yyyy/mm/dd" value="<%= shop.birth%>" />
								<% } else {%>
                <input class="input-medium date-picker" id="birth" name="birth" type="text" data-date-format="yyyy/mm/dd" placeholder="yyyy/mm/dd" />
								<% } %>
								<span class="input-group-addon">
									<i class="icon-calendar"></i>
								</span>
							</div>
						</div>
					</div>
			</div>
      <div class="space-4"></div>
			
      <div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="name">代表者のお名前</label>				
				<div class="col-sm-8">
					<div class="clearfix">
					<% if(shop.representative != undefined){%>
						<input class="col-xs-12 col-sm-8" type="text" name="representative" id="representative" value="<%= shop.representative%>" />
					<% } else {%>
						<input class="col-xs-12 col-sm-8" type="text" name="representative" id="representative" />
					<% } %>
					</div>
				</div>
			</div>
			<div class="space-4"></div>
			
      <h4 class="header blue bolder smaller">住所 <small>※無店舗営業のお客様の場合は、事務所の住所を入力ください。</small></h4>

      <div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="adress1">住所1</label>				
				<div class="col-sm-8">
					<select id="drpAdress1" name="adress1" style="width:220px;" class="populate">
					</select>
				</div>
			</div>
			<div class="space-4"></div>

      <div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="adress2">住所2</label>				
				<div class="col-sm-8">
					<select id="drpAdress2" name="adress2" style="width:220px;" class="populate">
					</select>
				</div>
			</div>
			<div class="space-4"></div>

      <div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="adress3">住所3</label>				
				<div class="col-sm-8">
          <textarea id="adress3" name="adress3" style="width:300px;height:100px;"><%= shop.adress3%></textarea>
				</div>
			</div>
			<div class="space-4"></div>

      <h4 class="header blue bolder smaller">ショップ情報 <small>※料金情報の登録の前に概要情報を設定ください。</small></h4>
      <div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="birthDay" >営業開始時間</label>
					<div class="col-sm-8">
						<div class="input-group bootstrap-timepicker">
							<input id="startTime" name="startTime" type="text" class="timepicker form-control" value=""/>
						</div>
					</div>
			</div>
			
      <div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="birthDay" >営業終了時間</label>
					<div class="col-sm-8">
						<div class="input-group bootstrap-timepicker">
							<input id="endTime" name="endTime" type="text" class="timepicker form-control" />
						</div>
					</div>
			</div>
      <div class="space-4"></div>
			
      <div class="form-group">
				<label class="col-sm-4 control-label no-padding-right" for="birthDay" >最低料金</label>
					<div class="col-sm-8">
						<input type="text" class="input-mini" id="spinner2" value="" name ="minPrice" data-rel="tooltip" title="最安で遊べる価格を設定ください" data-placement="bottom"/>
					</div>
			</div>
      <div class="space-4"></div>
			<input type="hidden" name="adress1Name" id="adress1Name" />
			<input type="hidden" name="adress2Name" id="adress2Name" />
	</div><!-- /row -->
	</div>
</div>
