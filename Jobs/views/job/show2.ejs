<!-- WRAPPER -->
<div id="wrapper">

  <div id="blog">
    <!-- PAGE TITLE -->
    <header id="page-title">
      <div class="container">
        <h1>新着 求人</h1>
        <ul class="breadcrumb">
          <li><a href="/home/index">Home</a></li>
          <li class="active">新着</li>
          <li class="active">検索結果　<%= jobs.length%>件</li>
        </ul>
      </div>
    </header>
		<section class="container">
      <!-- Masonry Loader -->
      <span class="js_loader"><i class="fa fa-asterisk fa-spin"></i>LOADING</span>
      <ul class="masonry-list">
        <% _.each(jobs, function (job) { %>
        <li class="masonry-item">
          <div class="item">
            <!-- article title -->
            <div class="item-title">
              <h5><a href="blog-post.html"><%= job.title.substring(0,20)%></a></h5>
              <a href="blog.html" class="label label-default light"><i class="fa fa-dot-circle-o">
              </i> <%= job.companyName%></a>
							<% if (job.employMentType.name != ""){ %>
              <a href="blog.html" class="label label-default light"><i class="fa fa-tag">
							</i> <%= job.employMentType.name%></a>
							<% } %> 
              <span class="label label-default light"><%= job.insdt%></span> 
              <span class="label label-default light">お気に入り:<%= job.favorite.total%></span> 
              <span class="label label-default light">View:<%= job.view.total%></span>
              <a href="blog-post.html#comments" class="scrollTo label label-default light"><i class="fa fa-comment-o"></i> <%= job.comment.total%> Comments</a>
            </div>
            <!-- image -->
            <figure>
            <% if (job.image.main != "") { %>  
              <img class="img-responsive" src="/images/job/main/<%= job.image.main %>" alt="img">
						<% } else { %>                                                           
							<img src="/images/1x1.png" class="img-responsive" data-src="holder.js/820x500/#676767:#555555/auto/" alt="img" />
						<% } %> 
            </figure>
            <!-- blog short preview -->
            <p><%= job.contents.substring(0,100)%>.....</p>
            <!-- read more button -->
            <a href="/job/detail/<%= job.id %>" class="btn btn-xs" data-link="ajax"><i class="fa fa-sign-out"></i> 詳細</a>
            <a href="blog-post.html" class="btn btn-xs"><i class="fa fa-sign-out"></i> 応募</a>
            <a href="/common/AddFavaorite/<%= job.id %>" class="btn btn-xs" data-link="ajax"><i class="fa fa-sign-out"></i> お気に入り</a>
            <a href="blog-post.html" class="btn btn-xs"><i class="fa fa-sign-out"></i> 除外</a>
            <a href="blog-post.html" class="btn btn-xs"><i class="fa fa-sign-out"></i> 通報</a>
            <a href="blog-post.html" class="btn btn-xs"><i class="fa fa-sign-out"></i> コメント</a>
          </div>
        </li>
        <% }) %>
      </ul>
      <div class="clearfix"></div>
    </section>
  </div>
</div>
